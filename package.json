{
  "name": "acquerello",
  "version": "0.1.1",
  "description": "Template based terminal coloring made really easy.",
  "homepage": "https://sw.cowtech.it/acquerello",
  "repository": "github:ShogunPanda/acquerello",
  "bugs": {
    "url": "https://github.com/ShogunPanda/acquerello/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "MIT",
  "private": false,
  "files": [
    "lib",
    "types",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "main": "lib/index.js",
  "typings": "types/index.d.ts",
  "types": "types/index.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.test.json -t stylish src/*.ts test/*.ts",
    "test": "jest test --coverage --coverageReporters=html --coverageReporters=text",
    "ci": "jest test --coverage --ci --coverageReporters=json",
    "sanity": "yarn lint && yarn test",
    "prebuild": "rm -rf lib/* types/* && yarn lint",
    "build": "tsc -p .",
    "prepublish": "yarn sanity",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "devDependencies": {
    "@cowtech/tslint-config": "^5.13.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
