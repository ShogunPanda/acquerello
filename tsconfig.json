{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "outDir": "lib",
    "declarationDir": "types",
    "alwaysStrict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": ["es2017"],
    "baseUrl": ".",
    "declaration": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": []
}
